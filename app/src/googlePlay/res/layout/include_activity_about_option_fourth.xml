<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_about_option_fourth_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?rectSelector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_card_giftcard_black_24dp"
        android:tint="@color/donateMenuTint"/>

    <TextView
        android:id="@+id/activity_about_option_fourth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/butn_donate"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/font_size_secondary"/>

</LinearLayout>