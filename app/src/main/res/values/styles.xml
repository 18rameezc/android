<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- generalization start -->
	<style name="Theme.TrebleShot" parent="Theme.TrebleShot.Base" />
	<style name="Theme.TrebleShot.NoActionBar" parent="Theme.TrebleShot.Base.NoActionBar" />
	<style name="Theme.TrebleShot.NoActionBar.StaticStatusBar" parent="Theme.TrebleShot.NoActionBar" />

	<style name="Theme.TrebleShot.Dark" parent="Theme.TrebleShot.Dark.Base" />
	<style name="Theme.TrebleShot.Dark.NoActionBar" parent="Theme.TrebleShot.Dark.Base.NoActionBar" />
	<style name="Theme.TrebleShot.Dark.NoActionBar.StaticStatusBar" parent="Theme.TrebleShot.Dark.NoActionBar" />
	<!-- generalization end -->

	<style name="NavigationView">
		<item name="colorPrimary">?colorAccent</item>
	</style>

	<style name="marqueeText">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="marqueeText.primary" parent="@style/marqueeText">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textSize">@dimen/font_size_primary</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="marqueeText.primary.big" parent="@style/marqueeText.primary">
		<item name="android:textSize">@dimen/font_size_big</item>
	</style>

	<style name="marqueeText.primary.normal" parent="@style/marqueeText.primary">
		<item name="android:textSize">@dimen/font_size_primary_normal</item>
	</style>

	<style name="marqueeText.primary.small" parent="@style/marqueeText.primary">
		<item name="android:textSize">@dimen/font_size_small</item>
	</style>

	<style name="marqueeText.secondary" parent="@style/marqueeText">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textSize">@dimen/font_size_secondary</item>
		<item name="android:textColor">?android:textColorSecondary</item>
	</style>

	<style name="marqueeText.secondary.big" parent="@style/marqueeText.secondary">
		<item name="android:textSize">@dimen/font_size_big</item>
	</style>

	<style name="marqueeText.secondary.small" parent="@style/marqueeText.secondary">
		<item name="android:textSize">@dimen/font_size_small</item>
	</style>

	<style name="condensedCapsTextStyle" parent="@style/marqueeText.secondary">
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="overflowButton">
		<item name="srcCompat">@drawable/ic_more_vert_white_24dp</item>
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:scaleType">center</item>
		<item name="android:background">?roundSelector</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:focusable">false</item>
	</style>

	<style name="listContentLayoutStyle">
		<item name="android:padding">@dimen/padding_list_content_parent_layout</item>
	</style>

	<style name="listContentIconStyle">
		<item name="android:layout_width">@dimen/icon_size_list_normal</item>
		<item name="android:layout_height">@dimen/icon_size_list_normal</item>
		<item name="android:layout_marginLeft">@dimen/padding_list_content_icon_main_margin_left</item>
		<item name="android:layout_marginStart">@dimen/padding_list_content_icon_main_margin_left</item>
		<item name="android:layout_marginEnd">@dimen/padding_list_content_icon_main_margin_right</item>
		<item name="android:layout_marginRight">@dimen/padding_list_content_icon_main_margin_right</item>
	</style>

	<style name="customListFragmentEmptyImageStyle">
		<item name="android:background">?rippleBackground</item>
		<item name="android:cropToPadding">true</item>
		<item name="srcCompat">@drawable/ic_trebleshot_white_24dp_static</item>
		<item name="tint">?colorControlNormal</item>
	</style>

	<style name="customListFragmentEmptyTextStyle" parent="marqueeText.primary.big">
		<item name="android:text">@string/text_listEmpty</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="condensedTitleStyle">
		<item name="android:layout_gravity">center</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="fontFamily">sans-serif-condensed</item>
	</style>

</resources>
