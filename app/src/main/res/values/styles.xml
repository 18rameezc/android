<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme" parent="@style/Theme.AppCompat.Light">
		<item name="actionBarStyle">@style/MyActionBar</item>
		<item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
		<item name="actionModeBackground">@color/actionModeBackground</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowBackground">@color/windowBackground</item>
		<item name="roundSelector">@drawable/round_selector</item>
		<item name="rectSelector">@drawable/rect_selector</item>
		<item name="genfw_customListFragmentEmptyImageStyle">
			@style/customListFragmentEmptyImageStyle
		</item>
		<item name="genfw_customListFragmentEmptyTextStyle">
			@style/customListFragmentEmptyTextStyle
		</item>
		<item name="genfw_customListFragmentEmptyActionButtonStyle">?buttonBarButtonStyle</item>
	</style>

	<style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="actionBarStyle">@style/MyActionBar</item>
		<item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
		<item name="actionModeBackground">@color/actionModeBackground</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowBackground">@color/windowBackground</item>
		<item name="roundSelector">@drawable/round_selector</item>
		<item name="rectSelector">@drawable/rect_selector</item>
		<item name="genfw_customListFragmentEmptyImageStyle">
			@style/customListFragmentEmptyImageStyle
		</item>
		<item name="genfw_customListFragmentEmptyTextStyle">
			@style/customListFragmentEmptyTextStyle
		</item>
		<item name="genfw_customListFragmentEmptyActionButtonStyle">?buttonBarButtonStyle</item>
	</style>

	<style name="AppTheme.NoActionBar.DefaultStatusBar" parent="AppTheme.NoActionBar" />

	<style name="AppTheme.GreyStatusBar" parent="@style/AppTheme.NoActionBar">
		<item name="colorPrimaryDark">@color/themeGreyDominant</item>
		<item name="colorPrimary">@color/themeGreyDominant</item>
		<item name="colorAccent">@color/themeGreyAccent</item>
		<item name="actionBarStyle">@style/MyActionBar.ShareScreen</item>
	</style>

	<style name="AppTheme.DonationTheme" parent="@style/AppTheme.NoActionBar">
		<item name="colorPrimaryDark">@color/donateMenuTint</item>
		<item name="colorPrimary">@color/donateMenuTint</item>
		<item name="colorAccent">@color/donateMenuTint</item>
		<item name="actionBarStyle">@style/MyActionBar.ShareScreen</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="colorControlNormal">#FFF</item>
	</style>

	<style name="MyActionBar.ShareScreen" parent="@style/MyActionBar">
		<item name="elevation">0dp</item>
	</style>

	<style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
		<item name="titleTextStyle">@style/MyTitleTextStyle</item>
	</style>

	<style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">#FFF</item>
	</style>

	<style name="marqueeText">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="marqueeText.primary" parent="@style/marqueeText">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textSize">@dimen/font_size_primary</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="marqueeText.primary.big" parent="@style/marqueeText.primary">
		<item name="android:textSize">@dimen/font_size_big</item>
	</style>

	<style name="marqueeText.primary.small" parent="@style/marqueeText.primary">
		<item name="android:textSize">@dimen/font_size_small</item>
	</style>

	<style name="marqueeText.secondary" parent="@style/marqueeText">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textSize">@dimen/font_size_secondary</item>
		<item name="android:textColor">?android:textColorSecondary</item>
	</style>

	<style name="condensedCapsTextStyle" parent="@style/marqueeText.secondary">
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="overflowButton">
		<item name="srcCompat">@drawable/ic_more_vert_grey_24dp</item>
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:scaleType">center</item>
		<item name="android:background">?attr/roundSelector</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:focusable">false</item>
		<item name="tint">@color/layoutTintColor</item>
	</style>

	<style name="listContentLayoutStyle">
		<item name="android:padding">@dimen/padding_list_content_parent_layout</item>
	</style>

	<style name="listContentIconStyle">
		<item name="android:layout_width">@dimen/icon_size_list_normal</item>
		<item name="android:layout_height">@dimen/icon_size_list_normal</item>
		<item name="android:layout_marginLeft">@dimen/padding_list_content_icon_main_margin_left</item>
		<item name="android:layout_marginRight">@dimen/padding_list_content_icon_main_margin_right</item>
	</style>

	<style name="customListFragmentEmptyImageStyle">
		<item name="android:background">@drawable/ripple_background_accent</item>
		<item name="android:cropToPadding">true</item>
		<item name="android:src">@drawable/ic_whatshot_white_24dp</item>
		<item name="android:tint">@color/whiteAccent</item>
	</style>

	<style name="customListFragmentEmptyTextStyle" parent="marqueeText.primary.big">
		<item name="android:text">@string/text_listEmpty</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="condensedTitleStyle">
		<item name="android:layout_gravity">center</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="fontFamily">sans-serif-condensed</item>
	</style>

</resources>
