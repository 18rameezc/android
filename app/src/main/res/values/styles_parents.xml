<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TrebleShot.Base" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- app styling -->
        <item name="colorDonation">@color/colorDonation</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorSelection">@color/colorSelection</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="rectSelector">@drawable/rect_selector</item>

        <!--styling framework-->
        <item name="genfw_customListFragmentEmptyImageStyle">
            @style/customListFragmentEmptyImageStyle
        </item>
        <item name="genfw_customListFragmentEmptyTextStyle">
            @style/customListFragmentEmptyTextStyle
        </item>
        <item name="genfw_customListFragmentEmptyActionButtonStyle">?buttonBarButtonStyle</item>
    </style>

    <style name="Theme.TrebleShot.Base.NoActionBar" parent="@style/Theme.TrebleShot.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrebleShot.Dark.Base" parent="Theme.AppCompat">
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="colorControlNormal">@color/dark_colorControlNormal</item>
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="android:windowBackground">@color/dark_windowBackground</item>

        <!-- app styling -->
        <item name="colorDonation">@color/dark_colorDonation</item>
        <item name="colorDivider">@color/dark_colorDivider</item>
        <item name="colorError">@color/dark_colorError</item>
        <item name="colorSelection">@color/dark_colorSelection</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="rectSelector">@drawable/rect_selector</item>

        <!--styling framework-->
        <item name="genfw_customListFragmentEmptyImageStyle">
            @style/customListFragmentEmptyImageStyle
        </item>
        <item name="genfw_customListFragmentEmptyTextStyle">
            @style/customListFragmentEmptyTextStyle
        </item>
        <item name="genfw_customListFragmentEmptyActionButtonStyle">?buttonBarButtonStyle</item>
    </style>

    <style name="Theme.TrebleShot.Dark.Base.NoActionBar" parent="@style/Theme.TrebleShot.Dark.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>