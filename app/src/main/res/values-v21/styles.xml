<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.NoActionBar.DefaultStatusBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.GreyStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/themeGreyDominant</item>
        <item name="colorPrimary">@color/themeGreyDominant</item>
        <item name="colorAccent">@color/themeGreyAccent</item>
        <item name="android:statusBarColor">@color/themeGreyDominant</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>