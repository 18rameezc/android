<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_hotspot_status_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/layout_hotspot_status_info_toggle_button"
                style="?buttonBarPositiveButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/butn_startHotspot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_hotspot_status_info_toggle_button"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_hotspot_status_info_container_text1_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <ImageView
                        android:id="@+id/layout_hotspot_status_info_container_text1_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/ic_info_white_24dp"
                        android:tint="@color/layoutTintColor" />

                    <TextView
                        android:id="@+id/layout_hotspot_status_info_container_text1"
                        style="@style/marqueeText.secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="5"
                        android:text="@string/text_qrCodeHotspotDisabledHelp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_hotspot_status_info_container_text2_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <ImageView
                        android:id="@+id/layout_hotspot_status_info_container_text2_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/ic_wifi_tethering_white_24dp"
                        android:tint="@color/layoutTintColor" />

                    <TextView
                        android:id="@+id/layout_hotspot_status_info_container_text2"
                        style="@style/marqueeText.secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/text_unknown" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_hotspot_status_info_container_text3_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <ImageView
                        android:id="@+id/layout_hotspot_status_info_container_text3_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/ic_vpn_key_black_24dp"
                        android:tint="@color/layoutTintColor" />

                    <TextView
                        android:id="@+id/layout_hotspot_status_info_container_text3"
                        style="@style/marqueeText.secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/text_unknown" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>