<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_default_device_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat"
    android:gravity="center"
    android:paddingTop="40dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/header_default_device_image"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/header_default_device_name_text"
        style="@style/marqueeText.primary.big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_appName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/header_default_device_version_text"
        style="@style/marqueeText.secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>
