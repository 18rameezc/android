<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_alignParentTop="true"
        android:id="@+id/activity_filepicker_fragment_pathresolver"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:layout_below="@id/activity_filepicker_fragment_pathresolver"
        android:id="@+id/activity_filepicker_fragment_files"
        android:name="com.genonbeta.TrebleShot.fragment.ReceivedFilesListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>