<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/network_device_list_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="15dp">

    <ImageView
        android:id="@+id/list_transaction_group_image_device"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/text_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_transaction_group_text_title"
            style="@style/marqueeText.primary.big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_transaction_group_text_text1"
                style="@style/marqueeText.secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/list_transaction_group_text_text2"
                style="@style/marqueeText.secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>