<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/device_info_not_supported_text"
            style="@style/TextAppearance.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:maxLines="5"
            android:text="@string/text_versionNotSupported"
            android:visibility="gone" />

        <TextView
            style="@style/TextAppearance.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_deviceModelInfo" />

        <TextView
            android:id="@+id/device_info_brand_and_model"
            style="@style/TextAppearance.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/device_info_get_update_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:background="?roundSelector"
                android:padding="8dp"
                android:text="@string/butn_download"
                app:srcCompat="@drawable/ic_file_download_white_24dp"
                app:tint="?colorAccent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/device_info_get_update_button"
                android:layout_toLeftOf="@id/device_info_get_update_button"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_version" />

                <TextView
                    android:id="@+id/device_info_version"
                    style="@style/TextAppearance.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/device_info_access_switcher_help_button"
                style="@style/OverflowButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?roundSelector"
                android:text="@string/butn_download"
                app:srcCompat="@drawable/ic_help_circle_white_24dp"
                app:tint="?colorAccent" />

            <View
                android:id="@+id/device_info_divider_1"
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@id/device_info_access_switcher_help_button"
                android:layout_toLeftOf="@id/device_info_access_switcher_help_button"
                android:background="?colorDivider" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/device_info_access_switcher"
                style="@style/TextAppearance.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/device_info_divider_1"
                android:layout_toLeftOf="@id/device_info_divider_1"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/text_allowToConnect" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/device_info_trust_switcher_help_button"
                style="@style/OverflowButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?roundSelector"
                android:text="@string/butn_download"
                app:srcCompat="@drawable/ic_help_circle_white_24dp"
                app:tint="?colorAccent" />

            <View
                android:id="@+id/device_info_divider_2"
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@id/device_info_trust_switcher_help_button"
                android:layout_toLeftOf="@id/device_info_trust_switcher_help_button"
                android:background="?colorDivider" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/device_info_trust_switcher"
                style="@style/TextAppearance.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/device_info_divider_2"
                android:layout_toLeftOf="@id/device_info_divider_2"
                android:hint="@string/text_appName"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/butn_trustZoneDevice" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
