<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

	<ScrollView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/abc_dialog_padding_material">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/device_brand_info"
				style="@style/marqueedText.primary"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/device_info_brand_and_model"
				style="@style/marqueedText.secondary"
			/>

			<View
				android:layout_width="wrap_content"
				android:layout_height="10dp"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ip_address"
				style="@style/marqueedText.primary"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/device_info_ip_address"
				style="@style/marqueedText.secondary"
			/>

			<View
				android:layout_width="wrap_content"
				android:layout_height="10dp"
			/>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/layout_device_info_access_divider">
				
				<android.support.v7.widget.SwitchCompat
					android:layout_alignParentRight="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/device_info_access_switcher"
				/>
			
				<TextView
					android:layout_alignParentLeft="true"
					android:layout_toLeftOf="@id/device_info_access_switcher"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/allow_access"
					style="@style/marqueedText.primary"
				/>
			
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>
</ScrollView>
