<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_fileexplorer_pathresolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbars="none"/>

    <View
        android:id="@+id/fragment_fileexplorer_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_fileexplorer_pathresolver"
        android:background="?colorDivider"/>

    <FrameLayout
        android:id="@+id/fragment_fileexplorer_listViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/fragment_fileexplorer_separator"/>

</RelativeLayout>