<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/layout_transaction_explorer_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbars="none"/>

    <View
        android:id="@+id/layout_transaction_explorer_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_transaction_explorer_recycler"
        android:background="#eee"/>

    <fragment
        android:id="@+id/layout_transaction_explorer_fragment_transaction"
        android:name="com.genonbeta.TrebleShot.fragment.TransactionListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layout_transaction_explorer_separator"/>

</RelativeLayout>
